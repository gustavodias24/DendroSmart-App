<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/design_default_color_background"
    tools:context=".activitys.RelatoriosActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- CARD CABEÇALHO / LOGO + NOME PROJETO -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center_horizontal">

                <!-- LOGO EMPRESA -->
                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/background_blue"
                    android:scaleType="centerCrop"
                    android:src="@raw/emptylogo"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Toque para alterar a logo da empresa"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <!-- NOME DO PROJETO -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/nome_field"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nome do Projeto"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:imeOptions="actionNext" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- CARD INFORMAÇÕES DO RELATÓRIO -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detalhes do relatório"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#212121"
                    android:layout_marginBottom="8dp" />

                <!-- OBSERVAÇÕES -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/observacoes_field"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Observações gerais"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minLines="2"
                        android:gravity="top|start"
                        android:imeOptions="actionNext"
                        android:inputType="textMultiLine" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- MÉTODO APLICADO -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/metodo_field"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Método aplicado"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- OPERADOR -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/operador_field"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nome do operador"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionDone" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- BOTÃO VER LISTA -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/ver_lista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Ver lista de árvores"
            app:iconTint="@android:color/white"
            app:iconPadding="8dp"
            android:textAllCaps="false" />

        <!-- CARD TOKEN -->
        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clique no botão para compartilhar em:"
            android:textColor="#000000" />

        <!-- AÇÕES: PDF E KMZ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_compartilhar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="PDF"
                android:textAllCaps="false"
                app:iconTint="@android:color/white"
                app:iconPadding="8dp" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_kmz"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="KMZ"
                android:textAllCaps="false"
                app:iconTint="@android:color/white"
                app:iconPadding="8dp" />

        </LinearLayout>

        <!-- TEXTO + LISTA -->
        <TextView
            android:id="@+id/textAvisoLista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nenhuma árvore registrada ainda..."
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="4dp" />

        <!-- CheckBox Marcar todos -->
        <CheckBox
            android:id="@+id/check_marcar_todos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marcar todos"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_arvores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false" />

    </LinearLayout>

</ScrollView>
