<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F5F7"
    tools:context=".activitys.InfosContatoActivity">

    <!-- Scroll pra caber bem em telas menores -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- TÍTULO -->
            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Informações de Contato"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="16dp" />

            <!-- CARD PRINCIPAL -->
            <LinearLayout
                android:id="@+id/cardContato"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@android:color/white"
                android:elevation="4dp"
                android:layout_margin="4dp"
                android:clipToOutline="true">

                <!-- WhatsApp -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <ImageView
                        android:id="@+id/iconWhats"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                    android:tint="#25D366" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="WhatsApp"
                            android:textStyle="bold"
                            android:textColor="#222222" />

                        <TextView
                            android:id="@+id/tvWhatsapp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+55 11 3042 4128"
                            android:textColor="#555555" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="#EEEEEE" />

                <!-- Site -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <ImageView
                        android:id="@+id/iconSite"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                    android:tint="#007AFF" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Site"
                            android:textStyle="bold"
                            android:textColor="#222222" />

                        <TextView
                            android:id="@+id/tvSite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="www.sinapsessolutions.com.br"
                            android:autoLink="web"
                            android:textColor="#555555" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="#EEEEEE" />

                <!-- E-mail -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <ImageView
                        android:id="@+id/iconEmail"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                    android:tint="#FF9500" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="E-mail"
                            android:textStyle="bold"
                            android:textColor="#222222" />

                        <TextView
                            android:id="@+id/tvEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="contato@sinapsessolutions.com.br"
                            android:autoLink="email"
                            android:textColor="#555555" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <!-- SEÇÃO DOWNLOADS -->
            <TextView
                android:id="@+id/tvDownloadsTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Downloads"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:paddingTop="16dp"
                android:paddingBottom="8dp" />

            <LinearLayout
                android:id="@+id/cardDownloads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@android:color/white"
                android:elevation="4dp"
                android:layout_margin="4dp"
                android:clipToOutline="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Selecione uma opção para download:"
                    android:textColor="#444444"
                    android:paddingBottom="12dp" />

                <!-- Botão Manual -->
                <Button
                    android:id="@+id/btnBaixarManual"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Baixar Manual - DendroSmart América Pro 2"
                    android:textAllCaps="false"
                    android:padding="10dp" />

                <!-- Espaço -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp" />

                <!-- Botão App Controle Remoto -->
                <Button
                    android:id="@+id/btnBaixarApp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Baixar App Controle Remoto"
                    android:textAllCaps="false"
                    android:padding="10dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
